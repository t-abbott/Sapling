%{
open Incremental.Syntax
%}

%token <float> NUMBER
%token <string> OP
%token EOF LPAREN RPAREN

%start parse
%type <Incremental.Syntax.Expr> parse

%%

parse: expr EOF             { $1 }

expr: NUMBER                { Number $1 }
    | expr OP expr          { Binop ($1, $2, $3) }
    | LPAREN expr RPAREN    { $2 }
